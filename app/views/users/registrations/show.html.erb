<h1>ユーザー詳細ページ</h1>
<h3><%= @user.email %></h3>
<h2>投稿内容</h2>
<% @user.posts.each do |post| %>
  <a href="/posts/<%= post.id %>"><%= post.content %></a>
  <hr>
<% end %>
<h3>参加するイベント</h3>
<% @user.participated_posts.each do |post| %>
  <%= post.user.email %>
  <%= post.description %>
<% end %>

<%= render "users/shared/links" %>
