<h3><%= @user.name %>さん主催のイベント一覧</h3>
<% if @user.posts.any? %>
  <% @user.posts.each do |post| %>
    <hr>
    <li class="posts">
      <span class="name"><%= link_to post.name, post_path(post.id) %></span></br>
      <%= post.date.strftime("%Y年%m月%d日") %>に<%= link_to post.address ,"https://maps.google.co.jp/maps?q=loc:#{post.latitude},#{post.longitude}&iwloc=J",target: "_blank" %>で開催
      <span class="timestamp"><%= time_ago_in_words(post.created_at) %>前に投稿</span>
    </li>
  <% end %>
  <hr>
<% else %>
  <p>主催のイベントはありません</p>
<% end %>
