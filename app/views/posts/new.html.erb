<% provide(:title, "イベント作成") %>
<h2>イベントを作成する</h2>
<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  <%= f.label :date %><br />
  <%= f.date_field :date %>
  <%= f.label :address %><br />
  <%= f.text_field :address, placeholder: "東京駅、など" %>
  <%= f.label :description %><br />
  <%= f.text_area :description, placeholder: "どんなゲームをする、など", wrap: "hard", cols: "100", rows: "5" %>
  イベントのイメージ画像
  <span class="picture">
    <%= f.file_field :post_image, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <%= f.submit "イベント作成" %>
<% end %>

<script type="text/javascript">
$('#post_post_image').bind('change', function() {
  var size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
    alert('アップロードできるファイルサイズの上限は5MBです。');
  }
});
</script>

